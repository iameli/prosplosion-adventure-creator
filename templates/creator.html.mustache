<!DOCTYPE html>
<head>
    <title>Prosplosion Adventure Creator</title>
    <script src="/engine/lib/kinetic-vcurrent.js"></script>
    <script src="//code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://localhost:9810/compile?id=main"></script>
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
    <script>
        new PAC.Creator({gameURL: '/games/{{game}}/game.json', resourceURL: '/games/{{game}}/resources'});
    </script>
    <link href="/static/bootstrap.css" rel="stylesheet">
    <link href="/static/admin.css" rel="stylesheet">
</head>
<body>
	<div id="AdminButton">
		<button class="btn" id="ShowAdmin">Show Admin Panel</button>
	</div>
	<div id="AdminPanel">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<button class="btn wide" id="HideAdmin">Hide Admin Panel</button>
					<button class="btn wide btn-info" id="SaveGame">SAVE GAME</button>
					<div class="accordion" id="accordion">
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#gameCollapse"> Game </a>
							</div>
							<div id="gameCollapse" class="accordion-body collapse">
								<div class="accordion-inner">
									<input type="text" name="name" id="name">
								</div>
							</div>
						</div>
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#roomCollapse"> Current Room </a>
                            </div>
                            <div id="roomCollapse" class="accordion-body collapse">
                                <div class="accordion-inner">
                                    <button id="showWalkable" data-toggle="true" class="btn wide">Show Walkable Path</button> <br/>
                                    <button id="showPathing" data-toggle="true" class="btn wide">Show Pathfinding Data</button> <br/>
                                    <button id="rebuildPathing" class="btn wide">Rebuild Pathfinding Data</button> <br/>
                                </div>
                            </div>
                        </div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="gameBorder" id="GameBorder">
    	<div class="gamecontainer" id="GameContainer"></div>
    </div>
